<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    <ImageView
        android:id="@+id/imageViewPicture_dt"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewName_dt"
        android:text="name"
        android:layout_below="@id/imageViewPicture_dt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewNameProvince_dt"
        android:text="ten tinh"
        android:layout_below="@id/textviewName_dt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewPrice_dt"
        android:layout_below="@id/textviewNameProvince_dt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewDescribe_dt"
        android:layout_below="@id/textviewNameProvince_dt"
        android:text="mo ta"/>
</RelativeLayout>